DATABASE_URL=postgresql://user:password@endpoint.neon.tech/dbname?sslmode=require
ANTHROPIC_API_KEY=sk-ant-...

# Auth (NextAuth.js v5)
AUTH_SECRET=your-random-secret-here
NEXTAUTH_URL=http://localhost:3000

# Admin seed (optional, used by lib/db/seed-admin.ts)
ADMIN_EMAIL=admin@qanoonai.com
ADMIN_PASSWORD=Admin123!

# SMTP for password reset emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@qanoonai.com

# Sentry (optional — error tracking & monitoring)
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
NEXT_PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_ENVIRONMENT=development
# SENTRY_AUTH_TOKEN=sntrys_... (for source map uploads in CI)

# QanoonAI FastAPI Backend (optional — enables /api/v1/* proxy rewrite)
# Set this to enable the FastAPI backend; without it, Next.js won't proxy to FastAPI
FASTAPI_URL=http://localhost:8000

# RAG Backend (optional — leave blank to use Neon-only search)
# Uses FASTAPI_URL above when the FastAPI backend handles RAG
RAG_BACKEND_URL=http://localhost:8000
RAG_BACKEND_TIMEOUT=55000
